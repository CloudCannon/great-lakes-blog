#!/bin/bash

rm -rf src/content/posts
rm -rf data/profiles.json
touch data/profiles.json
cd src/content
mkdir posts
cd posts
git clone https://github.com/CloudCannon/great-lakes-data.git
mv great-lakes-data/content/posts/* .
mkdir ../../../data/temp-profiles
mv great-lakes-data/content/profiles/* ../../../data/temp-profiles
rm -rf great-lakes-data
npm run prebuild:format-collection
npm run prebuild:format-data-collection
rm -rf ../../../data/temp-profiles
npm run prebuild:fetch-theme-color